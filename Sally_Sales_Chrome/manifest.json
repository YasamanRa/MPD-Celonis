{
  "manifest_version": 2,

  "name": "Sally Sales",
  "description": "Data driven and process driven sales insights",
  "version": "1.0",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://eu16.lightning.force.com/*",
        "http://eu16.lightning.force.com/*",
        "http://*/*"
      ],
      "js": [
        "js/jquery-3.3.1.js",
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "img/favicon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "declarativeContent",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "popup.html",
    "css/*.css",
    "img/*"
  ],
  "icons":{
    "128": "img/favicon.png"
  }
}
