{
  "manifest_version": 2,

  "name": "Sally Sales",
  "description": "Data driven and process driven sales insights",
  "version": "1.0",
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://eu16.lightning.force.com/*",
        "http://eu16.lightning.force.com/*"
      ],
      "js": [
        "js/jquery-3.3.1.js",
        "js/content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/icon@2x.png"
  },
  "permissions": [
    "activeTab",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "popup-panel.html",
    "css/*.css",
    "img/*"
  ]
}
